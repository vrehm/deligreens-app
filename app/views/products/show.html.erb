<div class="wrapper">
    <div class="container">
        <%= link_to "All product", products_path, class: "btn btn-primary"%>
        <div class="row">
            <div class="col-xs-7">
            <% if @product.photo? %>
              <%= cl_image_tag @product.photo.path, { :width=> "640", :crop=>"fill", :aspect_ratio=>"16:9", :gravity=>"auto" } %>
            <% else %>
              <img alt="" src="https://unsplash.it/450/450" class="img-responsive img-thumbnail">
            <% end %>
            </div>
            <div class="col-xs-5">
                <h1 class="text-center">
                    <%= @product.name.capitalize%></h1>
                <h4 class="text-center">
                    <%= @product.user.first_name.capitalize + " "  + @product.user.last_name%></h4>
                <!-- After we will change the email with the name! -->
                <div class="vintage">
                    <p>
                        Price:
                        <%= @product.price%></p>
                    <p>Weight:
                        <%= @product.weight%></p>
                    <form action="">
                        How many?
                        <input type="number" placeholder="1"><br></form>
                    <h5 class=" btn btn-default">
                        buy some!</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <strong class="padded">
                        Description:</strong>
                    <%= @product.description %>
                </div>
            </div>
        </div>
    </div>

<div class="profile-header-wrapper">
  <div class="container">
    <!-- Avatar and username -->
    <div class="profile-header-infos">
      <img src="http://placehold.it/40x40" class="avatar-medium">
      <h1><%= @user.first_name %></h1>
      <h2><i class="fa fa-map-marker" aria-hidden="true"></i> <%= @user.city %></h2>
    </div>
    <!-- Insert your <div class="tabs"> here -->
    <div class="tabs">
      <a class="tab active" href="#" data-target="#current">
        <h3>0</h3>
        <p>Achats en cours</p>
      </a>
      <a class="tab" href="#" data-target="#valided">
        <h3>4</h3>
        <p>Achats validés</p>
      </a>
      <a class="tab" href="#" data-target="#producers">
        <h3>12</h3>
        <p>Producteurs</p>
      </a>
      <a class="tab" href="#" data-target="#infos">
        <h3></h3>
        <p>Infos</p>
      </a>
    </div>
  </div>
</div>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="tab-content" id="current">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="order">
            <div class='order-status'>
              <i class="fa fa-refresh primary-color-medium" aria-hidden="true"></i>
            </div>
            <img src="http://placehold.it/100x100" class="order-image hidden-xs">
            <div class='order-body'>
              <h3 class="primary-color-medium">Ferme du wagon</h3>
              <p>Commande n° 123 // 13 produits</p>
            </div>
            <ul class="list-inline order-controls hidden-sm hidden-xs">
              <li>Montant: 100 €</li>
            </ul>
            <%#= link_to "Voir", root_path, class: "btn btn-warning marged-left" %>
            <% order = Order.find(6) %>
            <%= link_to 'Test validate', validate_order_path(order), method: :patch, class: "btn btn-warning" %>
          </div>
        </div>
      </div>
      <div class="tab-content hidden" id="valided">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="order">
            <div class='order-status'>
              <i class="fa fa-check green" aria-hidden="true"></i>
            </div>
            <img src="http://placehold.it/100x100" class="order-image hidden-xs">
            <div class='order-body'>
              <h3 class="primary-color-medium">Exploitation lyonnaise</h3>
              <p>Commande n° 121 // 2 produits</p>
            </div>
            <ul class="list-inline order-controls hidden-sm hidden-xs">
              <li>Montant: 46 €</li>
            </ul>
            <%= link_to "Voir", root_path, class: "btn btn-warning marged-left" %>
          </div>
        </div>
      </div>
      <div class="tab-content hidden" id="producers">
        <div class="col-xs-12 col-sm-4">
          <div class="product-card">
            <div class="product-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url(<%= image_path "products.jpg" %>);">
              <div class="product-card-category"></div>
              <div class="product-card-description">
              </div>
              <%= link_to "#",class: "product-card-link" %>
            </div>
            <div class="product-card-name">
              <h6>Exploitation machin</h6>
              <p>Paris</p>
              <p>Gérant: <span>Bob l'eponge</span></p>
            </div>
            <div class="product-card-btn">
              <%= link_to "Voir", "#", class: "btn btn-warning" %>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-content hidden" id="infos">
        <p class="text-center">Infos</p>
      </div>
    </div>
  </div>
</div>

<% @pending_order_farmers.each do |order| %>
  <div class="order">
    <div class='order-status'>
      <i class="fa fa-refresh primary-color-medium" aria-hidden="true"></i>
    </div>
    <% if order.user.avatar? %>
      <%= cl_image_tag order.user.avatar.path, width: 200, height: 200, crop: :fill, class: "avatar-large marged-right hidden-xs" %>
    <% else %>
      <img src="http://placehold.it/100x100" class="avatar-large marged-right hidden-xs">
    <% end %>
    <div class='order-body'>
      <h3 class="primary-color-medium"> <%= order.user.first_name %> <%= order.user.last_name %></h3>
      <p><% order.products.each do | product_specific| %>
        <p> <%= product_specific.name %> </p>
      <% end %>
      </p>
    </div>
    <ul class="list-inline order-controls hidden-sm hidden-xs">
      <li>Montant: <%= order.amount %> â‚¬</li>
    </ul>
    <%= link_to "Voir", order_path(order), class: "btn btn-warning marged-left" %>
  </div>
<%end%>

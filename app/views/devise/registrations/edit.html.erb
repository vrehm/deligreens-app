<% if current_user.producer == false %>
  <div class="alert alert-info2 alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    Remplis les infos de ton exploitation et deviens producteur partenaire Deligreens
  </div>
<% end %>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="card-form">
          <h3 class= "text-center">Modifier mon Profil</h3>
          <br>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
            <h4 class= "text-center">Infos personnelles</h4>
              <br>
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.input :first_name, label: "Prénom" %>
              <%= f.input :last_name, label: "Nom" %>
              <%= f.input :city, label: "Ville" %>
              <br>
              <h4 class= "text-center">Infos exploitation </h4>
              <br>
              <%= f.input :producer, as: :boolean, checked_value: true, unchecked_value: false, label: "Devenir producteur partenaire Deligreens" %>
              <br>
              <%= f.input :farm_name, label: "Nom de l'exploitation" %>
              <%= f.input :farm_description, label: "Description" %>
              <%= f.input :farm_location, label: "Ville" %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
              <%= f.input :password_confirmation, required: false %>
              <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
            </div>

            <div class="form-actions form-btn-center">
              <%= f.button :submit, "Modifier", class: "btn btn-warning" %>
            </div>
          <% end %>
        </div>
        <div class="card-form-footer text-center">
          <h4>Supprimer mon compte</h4>
          <p>Mécontent? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
          <%= link_to "Retour", :back, class: "button-gray btn form-btn-center" %>
        </div>
      </div>
    </div>
  </div>
</div>
